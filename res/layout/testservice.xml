<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<Button android:text="启动服务" android:id="@+id/start_service"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<Button android:text="停止服务" android:id="@+id/stop_service"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<Button android:text="绑定服务" android:id="@+id/bind_service"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<Button android:text="断开服务" android:id="@+id/unbind_service"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>

</LinearLayout>
